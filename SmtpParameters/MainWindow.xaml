<Window x:Class="SmtpParameters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmtpParameters"
        xmlns:conv="clr-namespace:SmtpParameters.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <conv:BoolToStartStopServiceButtonTextConverter x:Key="converter" />
        <conv:BoolToColorConverter x:Key="ColorConverter" />
    </Window.Resources>
    <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
        <StackPanel Background="{Binding UserData.IsEmailServiceStopped, Converter={StaticResource ColorConverter}}" >
            <CheckBox  x:Name="UDC" IsChecked="{Binding UserData.UseDefaultCredentials, Mode=TwoWay}" 
             IsEnabled="{Binding UserData.IsEmailServiceStopped, Mode=OneWay}">Use Default Credentials>
            </CheckBox>
            <CheckBox x:Name="Ss1" IsChecked="{Binding UserData.EnableSs1, Mode=TwoWay}" 
             IsEnabled="{Binding UserData.IsEmailServiceStopped, Mode=OneWay}">Enable Ssl
            </CheckBox>
            <AccessText Text="Port:  "/>
            <Border BorderBrush="Black" BorderThickness="1">
                <TextBox Name="PortText" IsEnabled="{Binding UserData.IsEmailServiceStopped, Mode=OneWay}" FontSize="12" FontWeight="Bold" Foreground="Black" Width="Auto" Text="{Binding UserData.Port, UpdateSourceTrigger=PropertyChanged}">
                </TextBox>
            </Border>
            <AccessText Text="Host:  " />
            <Border BorderBrush="Black" BorderThickness="1">
                <TextBox Name="HostText" IsEnabled="{Binding UserData.IsEmailServiceStopped, Mode=OneWay}" FontSize="12" FontWeight="Bold" Foreground="Black" Width="Auto" Text="{Binding UserData.Host, UpdateSourceTrigger=PropertyChanged}">
                </TextBox>
            </Border>
            <Button Content="Browse" Command="{Binding EmailClickCommand}" CommandParameter="Browse"/>
            <TextBox TextWrapping="WrapWithOverflow" Height ="50" Text="{Binding UserData.ContactsFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="12" Width="Auto"/>
            <Button Content="{Binding UserData.IsEmailServiceStopped, Converter={StaticResource converter}}" Command="{Binding EmailClickCommand}" Height="41" Margin="0,0,-0.333,0"/>
        </StackPanel>
        
        <StackPanel Background="{Binding CopyData.IsCopyServiceStopped, Converter={StaticResource ColorConverter}}" >
            <Button Content="Browse Target Source" Command="{Binding CopyClickCommand}" CommandParameter="Browse_Source"/>
            <TextBox TextWrapping="WrapWithOverflow" Height ="50" Text="{Binding CopyData.SourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="12" Width="Auto"/>
            <Button Content="Browse Target Path" Command="{Binding CopyClickCommand}" CommandParameter="Browse_Target"/>
            <TextBox TextWrapping="WrapWithOverflow" Height ="50" Text="{Binding CopyData.SourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="12" Width="Auto"/>
            <Button Content="{Binding CopyData.IsCopyServiceStopped, Converter={StaticResource converter}}" Command="{Binding CopyClickCommand}" Height="41" Margin="0,0,-0.333,0"/>
        </StackPanel>
    </Grid>
</Window>
